{
    "name": "robertkleinschuster/nice-beans",
    "description": "JavaBeans Implementierung fÃ¼r PHP",
    "license" : "BSD-3-Clause",
    "require": {
        "php": ">=7.2.0",
        "ext-json": "*",
        "robertkleinschuster/nice-core": "^1.2",
        "php-ds/php-ds": "^1.3"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Niceshops\\Bean\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Niceshops\\Bean\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev"
        }
    }
}
